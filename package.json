{
  "name": "@josulliv101/pigpile",
  "repository": "https://github.com/josulliv101/pigpile",
  "private": true,
  "main": "functions.js",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*",
      "services/*"
    ]
  },
  "scripts": {
    "postinstall": "preconstruct dev",
    "build": "yarn build-preconstruct && yarn build-nextjs",
    "build-preconstruct": "preconstruct build",
    "build-nextjs": "yarn workspace @josulliv101/nextjs build",
    "serve": "yarn build && firebase emulators:start --only functions,hosting",
    "deploy": "firebase deploy --only functions,hosting",
    "test": "jest"
  },
  "engines": {
    "node": "^16.15.0"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@preconstruct/cli": "^2.1.7",
    "@swc-node/jest": "^1.5.2",
    "@types/node": "^16.6.2",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.28.0",
    "firebase-admin": "^11.0.0",
    "firebase-functions": "^3.22.0",
    "jest": "^28.1.3",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
