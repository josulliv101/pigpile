{
  "hosting": {
    "public": "apps/nextjs/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsFunc"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, s-maxage=86400, stale-while-revalidate=172800"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": ".",
    "predeploy": ["yarn foo", "yarn", "yarn build"],
    "runtime": "nodejs16"
  }
}
